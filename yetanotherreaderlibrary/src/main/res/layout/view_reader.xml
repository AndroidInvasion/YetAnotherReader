<?xml version="1.0" encoding="utf-8"?>
<ru.lionzxy.yetanotherreaderlibrary.view.TouchDelimeter xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReaderFragment">

    <ScrollView
        android:id="@+id/reader_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.bluejamesbond.text.DocumentView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:documentView_cacheConfig="auto_quality"
                app:documentView_hyphen="-"
                app:documentView_insetPadding="20dp"
                tools:documentView_textSize="24sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />
        </LinearLayout>
    </ScrollView>


    <ru.lionzxy.yetanotherreaderlibrary.view.TapDetectView
        android:id="@+id/centerClick"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</ru.lionzxy.yetanotherreaderlibrary.view.TouchDelimeter>
